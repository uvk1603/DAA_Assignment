#include <bits/stdc++.h>
using namespace std;
int ans(int a[],int d[],int n) 
{
    int min=0,i,j;
    for (i=0;i<n-1;i++)
    {
        int p=1;
        for (j=i+1;j<n;j++) 
        {
            if ((a[i]>=a[j] && a[i]<= d[j]) || (a[j]>=a[i] && a[j]<=d[i]))
                p++;
        }
        min = max(min,p);
    }
    return min;
}
int main() {
    int n,i;
    cin>>n;
    int a[n],d[n];
    for(i=0;i<n;i++)
        cin>>a[i];
    for(i=0;i<n;i++)
        cin>>d[i];
    cout <<ans(a,d,n);
    return 0;
}
